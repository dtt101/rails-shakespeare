<h1>Listing lines</h1>

<table>
  <tr>
    <th>Character</th>
    <th>Line</th>
    <th>Line order</th>
    <th>Scene</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @lines.each do |line| %>
  <tr>
    <td><%= line.character %></td>
    <td><%= line.line %></td>
    <td><%= line.line_order %></td>
    <td><%= line.scene_id %></td>
    <td><%= link_to 'Show', line %></td>
    <td><%= link_to 'Edit', edit_line_path(line) %></td>
    <td><%= link_to 'Destroy', line, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

